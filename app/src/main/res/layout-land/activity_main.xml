<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="351dp"
        android:layout_height="410dp"
        android:gravity="bottom|right"
        android:padding="30dp"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027">

    </TextView>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81">

        <Button
            android:id="@+id/reset"
            style="@style/botones_util"
            android:onClick="reset"
            android:text="Clear" />

        <Button
            android:id="@+id/borrar"
            style="@style/botones_util"
            android:layout_columnSpan="2"
            android:onClick="borrar"
            android:text="Del" />

        <Button
            android:id="@+id/dividir"

            style="@style/botones_operadores"
            android:onClick="boton_operacion"
            android:text="/" />

        <Button
            android:id="@+id/b1"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="3" />

        <Button
            android:id="@+id/multiplicar"
            style="@style/botones_operadores"
            android:onClick="boton_operacion"
            android:text="*" />

        <Button
            android:id="@+id/b4"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="6" />

        <Button
            android:id="@+id/restar"
            style="@style/botones_operadores"
            android:onClick="boton_operacion"
            android:text="-" />

        <Button
            android:id="@+id/b7"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="9" />

        <Button
            android:id="@+id/sumar"
            style="@style/botones_operadores"
            android:layout_rowSpan="3"
            android:layout_gravity="fill"
            android:onClick="boton_operacion"
            android:text="+" />

        <Button
            android:id="@+id/b0"
            style="@style/botones_num"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:onClick="boton_num"
            android:text="0" />

        <Button
            android:id="@+id/b00"
            style="@style/botones_num"
            android:onClick="boton_num"
            android:text="." />

        <Button
            android:id="@+id/igual"
            style="@style/botones_operadores"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:onClick="boton_operacion"
            android:text="=" />


    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012">

        <Button
            android:id="@+id/mc"
            style="@style/botones_memo"
            android:onClick="borrar_memoria"
            android:text="MC"></Button>

        <Button
            android:id="@+id/m_mas"
            style="@style/botones_memo"
            android:onClick="sumar_memoria"
            android:text="M+"></Button>

        <Button
            android:id="@+id/m_menos"
            style="@style/botones_memo"
            android:onClick="restar_memoria"
            android:text="M-"></Button>

        <Button
            android:id="@+id/mr"
            style="@style/botones_memo"
            android:onClick="leer_memoria"
            android:text="Mr"></Button>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

